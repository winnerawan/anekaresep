<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwhitebackground"
    >

    <include layout="@layout/toolbarwithback"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/mainpage"
        android:scaleType="fitXY"/>



    <net.winnerawan.anekaresep.helper.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISCLAIMER"
        android:gravity="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@color/colortitletext"
        android:layout_marginTop="10dp"/>
    <net.winnerawan.anekaresep.helper.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectgray"
        android:padding="14dp"
        android:textSize="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:hint="@string/disclaimer"
        android:textColor="@color/colorheadtext"
        />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
